<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="jt.autismtracks.TaskSettings"
    android:clickable="true"
    tools:showIn="@layout/activity_task_settings">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/new_task"
        android:singleLine="true"
        android:inputType="textCapSentences"
        android:maxLength="18"
        android:hint="New Task"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="48dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No Date Selected"
        android:id="@+id/date"
        android:layout_below="@+id/new_task"
        android:layout_alignParentStart="true"
        android:onClick="showDatePickerDialog"
        android:background="?attr/editTextBackground"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No Time Selected"
        android:id="@+id/time"
        android:onClick="showTimePickerDialog"
        android:background="?attr/editTextBackground"
        android:layout_below="@+id/date"
        android:layout_alignParentStart="true" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/toggleButton"
        android:checked="false"
        android:layout_below="@+id/time"
        android:layout_toEndOf="@+id/alarmtv" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Task"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:layout_below="@+id/toggleButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:max="100"
        android:progress="50"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pointstitle"
        android:text="Points:"
        android:layout_below="@+id/toggleButton"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/alarmtv"
        android:text="Alarm"
        android:layout_alignTop="@+id/toggleButton"
        android:layout_alignEnd="@+id/pointstitle" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pointslabel"
        android:text="50/100"
        android:layout_below="@+id/seekBar"
        android:layout_alignEnd="@+id/seekBar" />


</RelativeLayout>

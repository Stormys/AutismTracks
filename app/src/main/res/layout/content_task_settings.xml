<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="jt.autismtracks.TaskSettings"
    android:clickable="true"
    tools:showIn="@layout/activity_task_settings">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/new_task"
        android:singleLine="true"
        android:inputType="textCapSentences"
        android:backgroundTint="@color/nickfav"
        android:textCursorDrawable="@color/nickfav"
        android:maxLength="18"
        android:hint="New Task"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No Date Selected"
        android:backgroundTint="@color/nickfav"
        android:id="@+id/date"
        android:layout_below="@+id/new_task"
        android:layout_alignParentStart="true"
        android:onClick="showDatePickerDialog"
        android:background="?attr/editTextBackground"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No Time Selected"
        android:backgroundTint="@color/nickfav"
        android:id="@+id/time"
        android:onClick="showTimePickerDialog"
        android:background="?attr/editTextBackground"
        android:layout_below="@+id/date"
        android:layout_alignParentStart="true" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/alarmtoggle"
        android:checked="false"
        android:layout_alignBottom="@+id/icon_button"
        android:layout_alignStart="@+id/pointslabel" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Task"
        android:background="@drawable/delete_drawable"
        android:alpha=".8"
        android:id="@+id/delete"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:max="100"
        android:progress="50"
        android:indeterminate="false"
        android:layout_below="@+id/time"
        android:backgroundTint="@color/nickfav"
        android:thumbTint="@color/nickfav"
        android:progressBackgroundTint="@color/nickfav"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pointstitle"
        android:text="Points:"
        android:textSize="20dp"
        android:layout_marginStart="20dp"
        android:layout_alignBottom="@+id/seekBar"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="29dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/alarmtv"
        android:text="Alarm    "
        android:textAlignment="viewEnd"
        android:textSize="25dp"
        android:gravity="center"
        android:layout_alignBottom="@+id/icon_button"
        android:layout_alignTop="@+id/alarmtoggle"
        android:layout_toStartOf="@+id/alarmtoggle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pointslabel"
        android:text="50/100"
        android:textSize="20dp"
        android:layout_below="@+id/seekBar"
        android:layout_alignEnd="@+id/seekBar"
        android:layout_marginEnd="22dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/icon_button"
        android:src="@drawable/agenda"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_below="@+id/seekBar"
        android:layout_alignEnd="@+id/pointstitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@drawable/agenda"
        android:id="@+id/hidden"
        android:layout_below="@+id/alarmtv"
        android:layout_alignStart="@+id/pointstitle"
        android:layout_marginTop="43dp"
        android:visibility="invisible" />


</RelativeLayout>
